# https://EditorConfig.org
root = true

[*]
indent_style = space
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.gradle]
indent_size = 4

[*.java]
indent_size = 4

[*.py]
indent_size = 4

[*.{js,js.map,ts}]
indent_size = 2

[*.{html,css}]
indent_size = 2

[*.{properties,yml,yaml}]
indent_size = 2

[*.{xml,json}]
indent_size = 2